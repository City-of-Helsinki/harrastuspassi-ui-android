<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hobbyBlue</item>
        <item name="colorPrimaryDark">@color/hobbyBlue</item>
        <item name="colorAccent">@color/hobbyBlue</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/slide_and_changebounds
        </item>
        <item name="android:windowSharedElementExitTransition">@transition/slide_and_changebounds
        </item>
        <item name="multiSliderStyle">@style/Widget.MultiSlider</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/hobbyBlue</item>
        <item name="colorControlActivated">@color/hobbyBlue</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/hobbyBlue</item>

        <item name="colorSwitchThumbNormal">@color/hobbyGrey
        </item>

        <item name="android:colorForeground">@color/hobbyGrey
        </item>
    </style>

    <style name="Widget.MultiSlider" parent="android:Widget"></style>

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>

    <style name="ActiveText">
        <item name="android:textColor">@color/hobbyTurquoise</item>
    </style>

    <style name="InactiveText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/hobbyTurquoise</item>
    </style>

    <style name="BottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTitleStyles" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ToolbarPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@color/hobbyBlue</item>
    </style>
</resources>
