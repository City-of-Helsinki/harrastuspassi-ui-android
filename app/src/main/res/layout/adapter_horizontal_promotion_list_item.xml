<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:layout_marginEnd="8dp"
        >

    <ImageView
            android:id="@+id/horizontal_promotion_list_image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/horizontal_promotion_list_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/hobbyPurple"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_promotion_list_image" />

    <TextView
            android:id="@+id/horizontal_promotion_list_available_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            android:text="@string/available"
            app:layout_constraintEnd_toEndOf="@+id/horizontal_promotion_list_title_text"
            app:layout_constraintStart_toStartOf="@+id/horizontal_promotion_list_title_text"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_promotion_list_title_text" />

    <TextView
            android:id="@+id/horizontal_promotion_list_available_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/horizontal_promotion_list_available_label"
            app:layout_constraintStart_toStartOf="@+id/horizontal_promotion_list_available_label"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_promotion_list_available_label" />
</androidx.constraintlayout.widget.ConstraintLayout>