<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.FilterViewActivity">

    <TextView
            android:text="@string/category_filter_component_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/add_hobby_categories_title" android:layout_weight="1"
            android:textColor="@color/ic_launcher_background"
            app:textAllCaps="true"
            android:fontFamily="Roboto"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/linearLayout"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_hobby_categories_title">


        <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/chosen_tags_view"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_black_24dp"
                android:id="@+id/open_hobby_categories_btn" android:layout_weight="1"
                android:backgroundTint="@color/cast_expanded_controller_ad_container_white_stripe_color"
                android:scaleType="fitEnd"
                android:contentDescription="@string/openFilterCategories"
                android:clickable="true" android:onClick="openCategories"/>


    </LinearLayout>
    <Button android:id="@+id/filterButton" android:layout_width="0dp"
            android:text="SUODATA!!!!"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>