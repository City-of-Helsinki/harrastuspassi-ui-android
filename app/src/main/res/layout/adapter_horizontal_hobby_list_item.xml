<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp">

        <ImageView
                android:id="@+id/horizontal_hobby_list_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/horizontal_hobby_list_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="2"
                android:minLines="1"
                android:textColor="@color/hobbyGreyDark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/horizontal_hobby_list_image"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/horizontal_hobby_list_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="2"
                android:minLines="1"
                android:textColor="@color/hobbyGrey"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/horizontal_hobby_list_week_day_icon"
                app:layout_constraintEnd_toEndOf="@+id/horizontal_hobby_list_title_text"
                app:layout_constraintStart_toStartOf="@+id/horizontal_hobby_list_title_text"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_hobby_list_title_text" />

        <TextView
                android:id="@+id/horizontal_hobby_list_week_day_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_event_blue_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/horizontal_hobby_list_description" />

        <TextView
                android:id="@+id/horizontal_hobby_list_week_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/hobbyBlue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/horizontal_hobby_list_week_day_icon"
                app:layout_constraintEnd_toEndOf="@+id/horizontal_hobby_list_description"
                app:layout_constraintStart_toEndOf="@+id/horizontal_hobby_list_week_day_icon"
                app:layout_constraintTop_toTopOf="@+id/horizontal_hobby_list_week_day_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
