<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.HobbyDetailActivity">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:elevation="12dp"
            android:id="@+id/rectangle_card"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:transitionName="@string/item_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/hobby_title">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/hobby_image"
                   android:scaleType="centerCrop"
                   android:contentDescription="@string/hobby_image"
        />
    </android.support.v7.widget.CardView>


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/hobby_title"
              android:textStyle="bold"
              android:textSize="16sp"
              app:layout_constraintStart_toStartOf="parent"

              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="16dp"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/rectangle_card"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/hobby_organizer"
              android:textStyle="bold"
              android:textSize="12sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/hobby_title"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"/>


    <TextView android:layout_width="16dp"
              android:layout_height="16dp"
              android:id="@+id/calendar_icon"
              android:background="@drawable/calendar_icon"
              app:layout_constraintTop_toBottomOf="@id/hobby_organizer"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginTop="16dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_time"
            android:gravity="start"
            app:layout_constraintStart_toEndOf="@+id/calendar_icon" android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hobby_organizer"
            app:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginEnd="8dp"/>

    <TextView android:layout_width="16dp"
              android:layout_height="16dp"
              android:id="@+id/location_icon"
              android:background="@drawable/location_icon"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/calendar_icon" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/period_label"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:gravity="start"
            app:layout_constraintStart_toEndOf="@+id/location_icon" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/date_time" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Osallistu"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/date_time"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/location" app:layout_constraintHorizontal_bias="0.509"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/hobby_organizer"
            android:id="@+id/button"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/period_label"
            android:text="Järjestämisajat"
            android:textStyle="bold"
            android:textSize="14sp"

            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/location" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/period" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/period_label" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/description_label"
              android:text="Kuvaus"
              android:textStyle="bold"
              android:textSize="14sp"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/period" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/enrolment_label"
              android:text="Ilmoittautuminen"
              android:textStyle="bold"
              android:textSize="14sp"
              app:layout_constraintTop_toBottomOf="@+id/description" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enrolment"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/enrolment_label" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/organizer_label"
              android:text="Järjestäjä"
              android:textStyle="bold"
              android:textSize="14sp"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/enrolment" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/organizer"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/organizer_label" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>