<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HobbyDetailActivity" android:id="@+id/constraintLayout2">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollView2">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:paddingTop="0dp">


            <ImageView
                    android:id="@+id/hobby_image"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:contentDescription="@string/hobby_image"
                    android:transitionName="@string/item_detail"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/hobby_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/hobbyPurple"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/hobby_image"
                    app:layout_constraintBottom_toTopOf="@+id/hobby_organizer"
                    app:layout_constraintEnd_toEndOf="@+id/hobby_image"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/hobby_image"
                    android:layout_marginTop="32dp"/>

            <TextView
                    android:id="@+id/hobby_organizer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/cast_expanded_controller_background_color"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@+id/calendar_icon"
                    app:layout_constraintEnd_toEndOf="@+id/hobby_title"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/hobby_title"
                    app:layout_constraintTop_toBottomOf="@+id/hobby_title"/>


            <TextView
                    android:id="@+id/calendar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/ic_date_range_24dp"
                    android:backgroundTint="@color/hobbyPurple"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@+id/date_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hobby_organizer"
                    app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="24dp"/>

            <TextView
                    android:id="@+id/start_time_icon"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clock_ic"
                    android:backgroundTint="@color/hobbyPurple"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toEndOf="@+id/date" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/start_time"
                    android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="@+id/date"
                    app:layout_constraintBottom_toBottomOf="@+id/date" android:layout_marginStart="8dp"/>
            <TextView
                    android:id="@+id/start_time"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_detail_start_time"
                    android:textColor="@color/hobbyPurple"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/start_time_icon" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@+id/start_time_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/start_time_icon"/>
            <TextView
                    android:id="@+id/date"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_detail_date"
                    android:textColor="@color/hobbyPurple"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/date_icon" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/start_time_icon"
                    app:layout_constraintTop_toTopOf="@+id/date_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/date_icon"/>
            <TextView
                    android:id="@+id/date_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="start"
                    android:text="@string/hobby_detail_day_of_week"
                    android:textColor="@color/hobbyPurple"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/calendar_icon" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/date_icon"
                    app:layout_constraintTop_toTopOf="@+id/calendar_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/calendar_icon"/>


            <TextView
                    android:id="@+id/location_icon"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:background="@drawable/location_icon"
                    android:backgroundTint="@color/hobbyPurple"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="@+id/calendar_icon" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/calendar_icon"/>

            <TextView
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif"
                    android:gravity="start"
                    android:textColor="@color/cast_expanded_controller_background_color"
                    android:textSize="14sp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/location_icon"
                    android:layout_marginStart="4dp" android:text="@string/hobby_detail_location"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/calendar_icon"/>

            <TextView
                    android:id="@+id/location_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby_detail_address"
                    android:textColor="@color/cast_expanded_controller_background_color"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/location_zipcode"
                    app:layout_constraintEnd_toEndOf="@+id/location"
                    android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/location"
                    app:layout_constraintStart_toStartOf="@+id/location"/>
            <TextView
                    android:id="@+id/description_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/hobby_detail_hobby_description"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/map"
                    app:layout_constraintEnd_toEndOf="@+id/description_label"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/description_label"
                    app:layout_constraintTop_toBottomOf="@+id/description_label"/>

            <TextView
                    android:id="@+id/description_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="32dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/hobby_detail_description_title"
                    android:textColor="@color/hobbyPurple"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/description_text"
                    app:layout_constraintStart_toStartOf="@+id/location_icon"
                    app:layout_constraintTop_toBottomOf="@+id/location_zipcode" android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:map="http://schemas.android.com/apk/res-auto"
                      android:id="@+id/map"
                      android:name="com.google.android.gms.maps.SupportMapFragment"
                      android:layout_width="0dp"
                      android:layout_height="300dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/description_text"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                      map:cameraZoom="13"
                      map:liteMode="true" map:layout_constraintHorizontal_bias="0.0"
                      map:layout_constraintVertical_bias="1.0"/>

            <TextView
                    android:id="@+id/location_zipcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/cast_expanded_controller_background_color"
                    app:layout_constraintBottom_toTopOf="@+id/description_label"
                    app:layout_constraintEnd_toEndOf="@+id/location_address"
                    app:layout_constraintStart_toStartOf="@+id/location_address"
                    app:layout_constraintTop_toBottomOf="@+id/location_address"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:id="@+id/date_icon"
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:background="@drawable/today_ic"
                    android:backgroundTint="@color/hobbyPurple"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toEndOf="@+id/date_time" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/date"
                    android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="@+id/date_time"
                    app:layout_constraintBottom_toBottomOf="@+id/date_time" android:layout_marginStart="8dp"/>


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>

