<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        >

    <ImageView
            android:id="@+id/home_promoted_image"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/home_promoted_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/hobbyPurple"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_promoted_image" />

    <TextView
            android:id="@+id/home_promoted_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="4"
            android:minLines="2"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/home_promoted_duration"
            app:layout_constraintEnd_toEndOf="@+id/home_promoted_title"
            app:layout_constraintStart_toStartOf="@+id/home_promoted_title"
            app:layout_constraintTop_toBottomOf="@+id/home_promoted_title" />

    <TextView
            android:id="@+id/home_promoted_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/hobbyPurple"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/home_promoted_description"
            app:layout_constraintStart_toStartOf="@+id/home_promoted_description"
            app:layout_constraintTop_toBottomOf="@+id/home_promoted_description" />
</androidx.constraintlayout.widget.ConstraintLayout>